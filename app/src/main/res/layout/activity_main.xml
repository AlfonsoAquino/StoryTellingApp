<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext=".MainActivity"
    android:background="#4167B2"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scegli una categoria"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="40dp"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/cardStory"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/storie_icon"
                android:layout_height="60dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Storie"
                android:gravity="center"
                android:textSize="20dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    
    <android.support.v7.widget.CardView
        android:id="@+id/cardEmotion"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/emozioni_icon"
            android:layout_height="60dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Emozioni"
            android:gravity="center"
            android:textSize="20dp"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardSequence"
        android:layout_width="190dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/sequenze_icon"
                android:layout_height="60dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sequenze"
                android:gravity="center"
                android:textSize="20dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>